{
    // Background menu
      "namespace": "long_select",
      "first": {
        "type": "panel",
        "size": [ "80%", "75%" ],
        "controls": [
          {
            "title": {
              "type": "label",
              "font_type": "MinecraftTen",
              "localize": false,
              "text": "#title_text",
              "anchor_from": "top_left",
              "anchor_to": "top_left",
              "font_scale_factor": 1.7,
              "size": [ "60%", "10%" ],
              "offset": [ "1.5%", "0%" ],
              "layer": 99,
              "shadow": true,
              "bindings": [
                {
                  "binding_name": "#title_text",
                  "binding_type": "global"
                }
              ]
            }
          },
          {
            "label": {
                "type": "label",
                "layer": 99,
                "size": ["80%", "10%"],
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "offset": ["4%", "13.5%"],
                "text": "#form_text"
            }
          },
          {
            "close": {
              "type": "panel",
              "anchor_from": "top_right",
              "anchor_to": "top_right",
              "controls": [
                {
                  "close_button@btn_close.btn_close": {}
                }
              ]
            }
          },
          {
            "contents": {
              "type": "image",
              "texture": "textures/ui/header_form",
              "keep_ratio": false,
              "controls": [
                {
                  "first_scroll_panel@long_select.first_scroll_panel": {}
                }
              ]
            }
          }
        ]
      },
      "first_scroll_panel@common.scrolling_panel": {
        "type": "stack_panel",
        "size": [ "92%", "75%" ],
        "offset": [ "0", "22%" ],
        "orientation": "vertical",
        "layer": 1,
        "anchor_from": "top_middle",
        "anchor_to": "top_middle",
        "controls": [
          {
            "scolling_panel@common.scrolling_panel": {
              "anchor_to": "top_left",
              "anchor_from": "top_left",
              "size": [ "100%", "100%" ],
              "$show_background": false,
              "$scrolling_content": "long_select.first_content",
              "$scroll_size": [ 5, "100% - 4px" ],
              "$scrolling_pane_size": [ "100%", "100%" ],
              "$scrolling_pane_offset": [ 0, -5 ],
              "$scroll_bar_right_padding_size": [ 1, 0 ]
            }
          }
        ]
      },
      "first_content": {
        "type": "panel",
          "anchor_from": "top_right",
          "anchor_to": "top_right",
          "offset": [ 5, 0 ],
          "size" :["100% - 5px", "100%c"],
          "controls": [
              {
                  "first_grid@long_select.first_grid": {
                      "offset": [ 0, 0 ]
                  }
              }
          ]
      },
      //Grid Placement
      "first_grid": {
          "type": "grid",
          "size": [ "100%", "90%c" ],
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "grid_item_template": "long_select.first_entry",
          "grid_rescaling_type": "horizontal",
          "collection_name": "form_buttons",
          "bindings": [
              {
                "binding_name": "#form_button_length",
                "binding_name_override": "#maximum_grid_items"
              }
          ]
      },
      "first_entry":{
        // Button Size
          "size": [ "16%", 100],
          "$background": "textures/ui/button_background",
          "type":"panel",
          "controls":[
              {
                  "button@common.button":{
                  "layer":1,
                  "$pressed_button_name": "button.form_button_click",
                  "controls":[
                    {
                        "default@long_select.first_entry_inside":{
                            "$state":"default"
                        }
                    },
                    {
                        "hover@long_select.first_entry_inside":{
                            "$state":"hover"
                        }
                    },
                    {
                        "pressed@long_select.first_entry_inside":{
                            "$state":"pressed"
                        }
                    }
                  ],
                  "bindings":[
                      {
                          "binding_type":"collection_details",
                          "binding_collection_name":"form_buttons"
                      },
                      {
                          "binding_name":"#form_button_text",
                          "binding_type":"collection",
                          "binding_collection_name":"form_buttons"
                      },
                      {
                          "binding_type":"view",
                          "source_property_name":"(not ((#form_button_text = '') or (#form_button_text = 'loading')))",
                          "target_property_name":"#visible"
                      }
                  ]
                  }
              },
              {
                "form_button@common_buttons.light_text_button": {
                  "$pressed_button_name": "button.form_button_click",
                  "$default_button_texture": "textures/ui/button_background",
                  "$hover_button_texture": "textures/ui/button_background_interact",
                  "$pressed_button_texture": "textures/ui/button_background_interact",
                  "$border_visible": false,
                  "focus_enabled": false,
                  "$button_text": "#form_button_text",
                  "$button_text_binding_type": "collection",
                  "$button_text_grid_collection_name": "form_buttons",
                  "$button_text_size": [ "100%", "30%" ],
                  "$button_text_max_size": [ "100%", "30%" ],
                  "$anchor": "bottom_middle",
                  "$new_ui_label_offset": [ 0, -10 ],
                  "bindings": [
                    {
                      "binding_type": "collection_details",
                      "binding_collection_name": "form_buttons"
                    }
                  ]
                }
              }
          ],
          "bindings":[
              {
                  "binding_name":"#form_button_text",
                  "binding_type":"collection",
                  "binding_collection_name":"form_buttons"
              }
          ]
      },
      "first_entry_inside":{
          "type":"stack_panel",
          "anchor_from":"top_middle",
          "anchor_to":"top_middle",
          "offset":[ "25%", 20 ],
          "size":[ "100% - 10px", "100% - 10px" ],
          "orientation":"vertical",
          "controls":[
              {
                  "entry_icon":{
                    "size":[ 35, 35 ],
                    "layer":10,
                    "type":"image",
                    "keep_ratio":true,
                    "bindings":[
                        {
                            "binding_name":"#form_button_texture",
                            "binding_name_override":"#texture",
                            "binding_type":"collection",
                            "binding_collection_name":"form_buttons"
                        },
                        {
                            "binding_name":"#form_button_texture_file_system",
                            "binding_name_override":"#texture_file_system",
                            "binding_type":"collection",
                            "binding_collection_name":"form_buttons"
                        },
                        {
                            "binding_type":"view",
                            "source_property_name":"(not ((#texture = '') or (#texture = 'loading')))",
                            "target_property_name":"#visible"
                        }
                    ]
                  }
              }
          ]
      }
  }